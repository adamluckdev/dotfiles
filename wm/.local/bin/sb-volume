#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) pavucontrol & ;;
	2) wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
	3) notify-send "ï€¦ Volume module" "\- Shows volume ï€¨   or î»¨  if muted.
- Middle click to mute." ;;
esac

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

# If muted, print î»¨  and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo î»¨  && exit

vol="${vol#Volume: }"
split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}
vol="$(split "$vol" ".")"
vol="${vol##0}"

case 1 in
	$((vol >= 70)) ) icon="ï€¨  " ;;
	$((vol >= 30)) ) icon="ï€§ " ;;
	$((vol >= 1)) ) icon="ï€¦ " ;;
	* ) echo î»¨  && exit ;;
esac

echo "$icon$vol%"
